<div class="min-h-screen bg-gray-50">
  <!-- Header -->
  <header class="bg-white shadow-sm">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex justify-between items-center h-16">
        <div class="flex items-center">
          <a href="/dashboard" class="w-8 h-8 bg-gradient-to-br from-blue-600 to-indigo-600 rounded-lg flex items-center justify-center">
            <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.746 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
            </svg>
          </a>
          <h1 class="ml-3 text-xl font-semibold text-gray-900">Support Center</h1>
        </div>
        
        <div class="flex items-center space-x-4">
          <div class="w-8 h-8 bg-gradient-to-br from-blue-500 to-indigo-500 rounded-full flex items-center justify-center text-white text-sm font-semibold">
            {{user.firstName.[0]}}{{user.lastName.[0]}}
          </div>
          <span class="text-sm text-gray-700">{{user.firstName}} {{user.lastName}}</span>
          <a href="/logout" class="text-sm text-gray-500 hover:text-gray-700">Sign out</a>
        </div>
      </div>
    </div>
  </header>

  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <!-- Page Header -->
    <div class="mb-8">
      <h2 class="text-2xl font-bold text-gray-900">Support Center</h2>
      <p class="text-gray-600">Get help with your medical portal questions.</p>
    </div>

    <!-- Quick Actions -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
      <div class="bg-white rounded-lg shadow p-6">
        <div class="flex items-center mb-4">
          <svg class="w-8 h-8 text-blue-600 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.228 9c.549-1.165 2.03-2 3.772-2 2.21 0 4 1.343 4 3 0 1.4-1.278 2.575-3.006 2.907-.542.104-.994.54-.994 1.093m0 3h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          <h3 class="text-lg font-medium text-gray-900">FAQ</h3>
        </div>
        <p class="text-gray-600 mb-4">Find answers to common questions</p>
        <button class="text-blue-600 hover:text-blue-700 font-medium">Browse FAQ →</button>
      </div>

      <div class="bg-white rounded-lg shadow p-6">
        <div class="flex items-center mb-4">
          <svg class="w-8 h-8 text-green-600 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
          </svg>
          <h3 class="text-lg font-medium text-gray-900">Live Chat</h3>
        </div>
        <p class="text-gray-600 mb-4">Chat with our support team</p>
        <button class="text-green-600 hover:text-green-700 font-medium">Start Chat →</button>
      </div>

      <div class="bg-white rounded-lg shadow p-6">
        <div class="flex items-center mb-4">
          <svg class="w-8 h-8 text-purple-600 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
          </svg>
          <h3 class="text-lg font-medium text-gray-900">New Ticket</h3>
        </div>
        <p class="text-gray-600 mb-4">Submit a support request</p>
        <button class="text-purple-600 hover:text-purple-700 font-medium">Create Ticket →</button>
      </div>
    </div>

    <!-- Support Tickets -->
    <div class="bg-white shadow rounded-lg">
      <div class="px-6 py-4 border-b border-gray-200 bg-gray-50">
        <div class="flex items-center justify-between">
          <h3 class="text-lg font-medium text-gray-900">Your Support Tickets</h3>
          <button class="px-4 py-2 bg-blue-600 text-white text-sm rounded-md hover:bg-blue-700">
            New Ticket
          </button>
        </div>
      </div>
      
      {{#if tickets.length}}
        <ul class="divide-y divide-gray-200">
          {{#each tickets}}
            <li class="px-6 py-6">
              <div class="flex items-center justify-between">
                <div class="flex-1">
                  <div class="flex items-center justify-between mb-2">
                    <h4 class="text-lg font-medium text-gray-900">{{this.subject}}</h4>
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium {{#if (eq this.status 'open')}}bg-green-100 text-green-800{{else}}bg-gray-100 text-gray-800{{/if}}">
                      {{this.status}}
                    </span>
                  </div>
                  <div class="text-sm text-gray-500">
                    <span>Ticket #{{this.id}}</span>
                    <span class="mx-2">•</span>
                    <span>Created {{this.createdAt}}</span>
                    <span class="mx-2">•</span>
                    <span>Last reply {{this.lastReply}}</span>
                  </div>
                </div>
                <div class="ml-4">
                  <button class="text-blue-600 hover:text-blue-700 font-medium">View Details →</button>
                </div>
              </div>
            </li>
          {{/each}}
        </ul>
      {{else}}
        <div class="px-6 py-12 text-center">
          <svg class="w-12 h-12 text-gray-400 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.228 9c.549-1.165 2.03-2 3.772-2 2.21 0 4 1.343 4 3 0 1.4-1.278 2.575-3.006 2.907-.542.104-.994.54-.994 1.093m0 3h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          <p class="text-gray-500 mb-4">No support tickets yet</p>
          <button class="px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700">
            Create Your First Ticket
          </button>
        </div>
      {{/if}}
    </div>

    <!-- Contact Information -->
    <div class="mt-8 bg-blue-50 rounded-lg p-6">
      <h3 class="text-lg font-medium text-gray-900 mb-4">Need Immediate Help?</h3>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <div>
          <div class="flex items-center mb-2">
            <svg class="w-5 h-5 text-blue-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
            </svg>
            <span class="font-medium text-gray-900">Phone Support</span>
          </div>
          <p class="text-gray-600">+1 (800) 123-4567</p>
          <p class="text-sm text-gray-500">Mon-Fri 8AM-6PM EST</p>
        </div>
        <div>
          <div class="flex items-center mb-2">
            <svg class="w-5 h-5 text-blue-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
            </svg>
            <span class="font-medium text-gray-900">Email Support</span>
          </div>
          <p class="text-gray-600">support@medicalportal.com</p>
          <p class="text-sm text-gray-500">Response within 24 hours</p>
        </div>
      </div>
    </div>
  </div>
</div>