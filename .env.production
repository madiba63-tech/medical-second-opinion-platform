# PRODUCTION Environment Configuration
NODE_ENV=production

# Production Database
DATABASE_URL="postgresql://prod_user:prod_password@prod-db-host:5432/secondopinion_prod?schema=public"

# Production Redis
REDIS_URL="redis://:prod_redis_password@prod-redis-host:6379"
REDIS_PASSWORD="prod_redis_password"

# Production JWT Secret (64+ characters for maximum security)
JWT_SECRET="prod-jwt-secret-must-be-64-characters-minimum-for-production-deployment"

# Production Service URLs (external domains/load balancers)
FRONTEND_URL="https://app.second-opinion.com"
PATIENT_IDENTITY_SERVICE_URL="https://api.second-opinion.com/identity"
CASE_MANAGEMENT_SERVICE_URL="https://api.second-opinion.com/cases"
AI_ANALYSIS_SERVICE_URL="https://api.second-opinion.com/analysis"
PROFESSIONAL_SERVICE_URL="https://api.second-opinion.com/professionals"
NOTIFICATION_SERVICE_URL="https://api.second-opinion.com/notifications"
FILE_MANAGEMENT_SERVICE_URL="https://api.second-opinion.com/files"
PAYMENT_BILLING_SERVICE_URL="https://api.second-opinion.com/billing"
PROFESSIONAL_WORKPLACE_SERVICE_URL="https://api.second-opinion.com/workplace"
ADMIN_MANAGEMENT_SERVICE_URL="https://api.second-opinion.com/admin"
WORKFLOW_ENGINE_SERVICE_URL="https://api.second-opinion.com/workflow"

# Production Feature Flags
ENABLE_DEBUG_LOGGING=false
ENABLE_MOCK_PAYMENTS=false
SKIP_EMAIL_VERIFICATION=false