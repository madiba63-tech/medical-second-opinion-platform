    "prisma:studio": "prisma studio",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "docker:build": "docker build -t notification-service .",
    "docker:run": "docker run -p 3005:3005 notification-service"
