{
  "name": "@second-opinion/patient-identity-service",
  "version": "1.0.0",
  "description": "Patient Identity Service - User authentication, authorization, and profile management",
  "main": "src/server.ts",
  "scripts": {
    "dev": "nodemon --exec ts-node src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate deploy",
    "prisma:studio": "prisma studio",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "docker:build": "docker build -t patient-identity-service .",
    "docker:run": "docker run -p 3001:3001 patient-identity-service"
  },
  "keywords": [
    "microservice",
    "authentication",
    "identity",
    "healthcare",
    "patient"
  ],
  "author": "Second Opinion Platform Team",
  "license": "MIT",
  "dependencies": {
    "@prisma/client": "^6.14.0",
    "express": "^4.21.1",
    "cors": "^2.8.5",
    "helmet": "^8.0.0",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "zod": "^3.23.8",
    "winston": "^3.15.0",
    "redis": "^4.7.0",
    "express-rate-limit": "^7.4.1",
    "express-validator": "^7.2.0",
    "compression": "^1.7.5",
    "dotenv": "^16.4.7",
    "nodemailer": "^6.9.18",
    "otplib": "^12.0.1",
    "qrcode": "^1.5.4"
  },
  "devDependencies": {
    "@types/express": "^5.0.0",
    "@types/cors": "^2.8.17",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node": "^22.8.6",
    "@types/compression": "^1.7.5",
    "@types/nodemailer": "^6.4.19",
    "@types/qrcode": "^1.5.5",
    "@typescript-eslint/eslint-plugin": "^8.13.0",
    "@typescript-eslint/parser": "^8.13.0",
    "eslint": "^9.14.0",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.14",
    "ts-jest": "^29.2.5",
    "nodemon": "^3.1.7",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.3",
    "prisma": "^6.14.0"
  },
  "prisma": {
    "schema": "./prisma/schema.prisma"
  },
  "engines": {
    "node": ">=22.0.0",
    "npm": ">=10.0.0"
  }
}