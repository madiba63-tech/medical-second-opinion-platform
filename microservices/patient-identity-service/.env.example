# Patient Identity Service Environment Configuration
# Copy this file to .env and update with your values

# ===== SERVER CONFIGURATION =====
NODE_ENV=development
PORT=3001
HOST=0.0.0.0

# ===== DATABASE CONFIGURATION =====
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/secondopinion_identity?schema=public"
DATABASE_POOL_SIZE=20
DATABASE_TIMEOUT=30000

# ===== REDIS CONFIGURATION =====
REDIS_URL="redis://localhost:6379"
REDIS_PASSWORD=""
REDIS_TIMEOUT=5000

# ===== JWT CONFIGURATION =====
JWT_SECRET="your-super-secret-jwt-key-at-least-32-characters-long"
JWT_EXPIRES_IN="24h"
JWT_REFRESH_EXPIRES_IN="7d"

# ===== ENCRYPTION CONFIGURATION =====
ENCRYPTION_KEY="your-32-character-encryption-key-here"

# ===== EMAIL CONFIGURATION =====
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER=""
SMTP_PASSWORD=""
SMTP_FROM="noreply@second-opinion.com"

# ===== TWO-FACTOR AUTHENTICATION =====
TOTP_SERVICE_NAME="Second Opinion"
TOTP_ISSUER="Second Opinion Platform"

# ===== SECURITY CONFIGURATION =====
BCRYPT_ROUNDS=12
PASSWORD_MIN_LENGTH=8
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=900000  # 15 minutes in milliseconds

# ===== RATE LIMITING =====
RATE_LIMIT_WINDOW=900000  # 15 minutes in milliseconds
RATE_LIMIT_MAX_REQUESTS=100

# ===== CORS CONFIGURATION =====
CORS_ORIGINS="http://localhost:3000,https://app.second-opinion.com"

# ===== LOGGING CONFIGURATION =====
LOG_LEVEL=info
LOG_FORMAT=json

# ===== CLOUD PROVIDER =====
CLOUD_PROVIDER=local  # aws, azure, gcp, local

# ===== MONITORING CONFIGURATION =====
METRICS_ENABLED=true
JAEGER_ENDPOINT=""

# ===== SERVICE MESH CONFIGURATION =====
SERVICE_MESH_ENABLED=false

# ===== INTERNAL API CONFIGURATION =====
INTERNAL_API_KEY=""